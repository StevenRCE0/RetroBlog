if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  box-shadow: 0px 1px 3px rgba(0, 0, 0, .6)
  @media (prefers-color-scheme: dark)
    background: #232323
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal
  li
    text-decoration: underline
    color: rgba(0, 0, 0, .8)
    transition-duration: .2s
    transition-timing-function: ease-in-out
    &:hover
      opacity: .7
    a
      @media (prefers-color-scheme: dark)
        color: #fff!important

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
